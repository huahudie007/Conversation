<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical">
    <LinearLayout
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/hero_01"
            android:background="@mipmap/item_sel"/>
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HUAHUDIE"
                android:textColor="#000000"
                android:textSize="20sp"/>
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id:88888888"/>


        </LinearLayout>
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/screenshot"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv_seting2"
                style="@style/imageLit"
                android:src="@mipmap/find_5"/>
            <TextView
                style="@style/textv"
                android:text="相册"
                android:layout_toRightOf="@id/iv_seting2"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv_seting3"
                style="@style/imageLit"
                android:src="@mipmap/find_5"/>
            <TextView
                style="@style/textv"
                android:text="收藏"
                android:layout_toRightOf="@id/iv_seting3"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv_seting4"
                style="@style/imageLit"
                android:src="@mipmap/find_5"/>
            <TextView
                style="@style/textv"
                android:text="帮助"
                android:layout_toRightOf="@id/iv_seting4"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/iv_seting5"
                style="@style/imageLit"
                android:src="@mipmap/find_5"/>
            <TextView
                style="@style/textv"
                android:text="反馈"
                android:layout_toRightOf="@id/iv_seting5"/>

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/iv_seting6"
            style="@style/imageLit"
            android:src="@mipmap/find_5"/>
        <TextView
            style="@style/textv"
            android:text="设置"
            android:layout_toRightOf="@id/iv_seting6"/>

    </RelativeLayout>

 

</LinearLayout>
